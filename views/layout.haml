%html{ lang: 'en' }
  %head
    %title Hedbergism - A single, random quote from Mitch Hedberg
    %meta{ charset: 'utf-8' }

    %link{ href: 'https://fonts.googleapis.com/css?family=Amatic+SC:700', rel: 'stylesheet' }

    %link{ href: '/style.css', rel: 'stylesheet' }

    %meta{ content: locals[:permalink], property: 'og:url' }
    %meta{ content: 'website', property: 'og:type' }
    %meta{ content: 'Hedbergism.com', property: 'og:title' }
    %meta{ content: 'A single, random quote from Mitch Hedbergn', property: 'og:description' }
    %meta{ content: 'https://www.your-domain.com/path/image.jpg', property: 'og:image' }
  %body
    = yield
    #fb-root
    :javascript
      (function(d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) return;
        js = d.createElement(s); js.id = id;
        js.src = 'https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.11';
        fjs.parentNode.insertBefore(js, fjs);
      }(document, 'script', 'facebook-jssdk'));
